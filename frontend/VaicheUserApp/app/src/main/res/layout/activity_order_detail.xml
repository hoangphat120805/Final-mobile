<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background_light"
tools:context=".ui.history.OrderDetailActivity">

<!-- Custom Top Toolbar -->
    <RelativeLayout
        android:id="@+id/custom_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/teal_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            tools:text="Bottle"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/custom_toolbar_container"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- Shipper/Collector Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_collector_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:strokeColor="#C0C0C0"
                app:strokeWidth="1dp"
                android:src="@drawable/default_avatar"
                android:scaleType="centerCrop"
                android:contentDescription="Collector Avatar" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_collector_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="BKSky" />

                <!-- REMOVED: tv_collector_vehicle -->
                <!-- <TextView
                    android:id="@+id/tv_collector_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    tools:text="SH 150 83F1-2102" /> -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_collector_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="4.96" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="Star Icon"
                    android:layout_marginStart="4dp"
                    app:tint="#FFC107" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/ProfileDetailDivider" android:layout_marginVertical="16dp"/>

        <!-- Order Items Detail Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_order_items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <!-- Order items will be dynamically added here -->
        </LinearLayout>

        <View style="@style/ProfileDetailDivider" android:layout_marginVertical="16dp"/>

        <!-- Total Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_order_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="34.750Ä‘" />
        </LinearLayout>

        <View style="@style/ProfileDetailDivider" android:layout_marginVertical="16dp"/>

        <!-- Payment Method -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_payment_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                tools:src="@drawable/ic_wallet"
                android:contentDescription="Payment Icon" />
            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Wallet" />
        </LinearLayout>

        <View style="@style/ProfileDetailDivider" android:layout_marginVertical="16dp"/>

        <!-- Rating Section (Visible only if order is completed and not yet rated) -->
        <LinearLayout
            android:id="@+id/ll_rating_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="visible"> <!-- Initially GONE, managed by logic -->

            <TextView
                android:id="@+id/tv_rating_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your experience with BKSky"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_star_rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <ImageView style="@style/RatingStar" android:id="@+id/star_1"/>
                <ImageView style="@style/RatingStar" android:id="@+id/star_2"/>
                <ImageView style="@style/RatingStar" android:id="@+id/star_3"/>
                <ImageView style="@style/RatingStar" android:id="@+id/star_4"/>
                <ImageView style="@style/RatingStar" android:id="@+id/star_5"/>
            </LinearLayout>

            <!-- NEW: Comment Box -->
            <EditText
                android:id="@+id/et_rating_comment"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top|start"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:hint="Add a comment (optional)"
                android:inputType="textMultiLine"
                android:maxLength="500" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Send"
                style="@style/ProfileActionButton" />
        </LinearLayout>

        <!-- NEW: Already Rated Section (Visible if order is completed AND rated) -->
        <LinearLayout
            android:id="@+id/ll_already_rated_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have rated this order."
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_rated_stars_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <!-- Read-only stars will be displayed dynamically -->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rated_comment"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top|start"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:maxLength="500"
                tools:text="Great service! Very quick and friendly." />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>