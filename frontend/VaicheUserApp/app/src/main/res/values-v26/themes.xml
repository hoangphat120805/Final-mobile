<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <!-- This is crucial to keep text visible over the white background -->
    </style>

    <style name="ProfileDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
</resources>