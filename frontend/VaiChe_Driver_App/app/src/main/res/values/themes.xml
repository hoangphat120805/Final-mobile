<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.VaiChe_Driver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Alias theme cho application -->
    <style name="Theme.VaiChe_Driver" parent="Base.Theme.VaiChe_Driver"/>

    <!-- Đây là theme app chính -->
    <style name="Theme.DriverApp" parent="Base.Theme.VaiChe_Driver"/>

    <!-- Text style custom -->
    <style name="SectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Transparent dialog -->
    <style name="TransparentDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_rounded_white</item>
        <item name="android:paddingHorizontal" tools:targetApi="26">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <!-- This is crucial to keep text visible over the white background -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Shape.SegPill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Shape" parent="ShapeAppearanceOverlay.App.CornerSize50Percent"/>


</resources>
