<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.VaiChe_Driver" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Alias theme cho application -->
    <style name="Theme.VaiChe_Driver" parent="Base.Theme.VaiChe_Driver"/>

    <!-- Đây là theme app chính -->
    <style name="Theme.DriverApp" parent="Base.Theme.VaiChe_Driver"/>

    <!-- Text style custom -->
    <style name="SectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Transparent dialog -->
    <style name="TransparentDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
