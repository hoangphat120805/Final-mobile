<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.RatingsFragment">

    <!-- Toolbar (Không có nút back, chỉ có tiêu đề) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ratings"
        app:titleCentered="true" />

    <View
        android:id="@+id/toolbar_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Các nút ở dưới cùng -->
    <Button
        android:id="@+id/btn_submit_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#48C5B8"
        android:paddingVertical="16dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/btn_skip_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_skip_rating"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#E0E0E0"
        android:paddingVertical="16dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_submit_rating"
        app:layout_constraintStart_toStartOf="@id/btn_submit_rating" />

    <!-- Nội dung chính ở giữa -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.2">

        <!-- Avatar -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="98dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_large"
                 />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="How was your delivery?"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Your feedback will help improve\nservice experience"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Rating Stars -->
        <LinearLayout
            android:id="@+id/rating_stars_container"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Star 1"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Star 2"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Star 3"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Star 4"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Star 5"/>
        </LinearLayout>

        <!-- Comments Box -->
        <EditText
            android:id="@+id/et_comments"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/comment_box_background"
            android:gravity="top|start"
            android:hint="Additional comments"
            android:padding="16dp"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>