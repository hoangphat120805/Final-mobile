<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_update_password"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/design_default_color_on_primary"
        app:cardCornerRadius="16dp" app:cardElevation="2dp">
        <TextView
            android:padding="16dp" android:text="Update password"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_edit_avatar"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/design_default_color_on_primary"
        app:cardCornerRadius="16dp" app:cardElevation="2dp">
        <TextView
            android:padding="16dp" android:text="Edit avatar"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_edit_profile"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/design_default_color_on_primary"
        app:cardCornerRadius="16dp" app:cardElevation="2dp">
        <TextView
            android:padding="16dp" android:text="Edit profile"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_logout"
        app:cardBackgroundColor="@color/design_default_color_on_primary"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardCornerRadius="16dp" app:cardElevation="2dp">
        <TextView
            android:padding="16dp" android:text="Logout"
            android:textStyle="bold" android:textSize="16sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress_settings"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
</LinearLayout>
