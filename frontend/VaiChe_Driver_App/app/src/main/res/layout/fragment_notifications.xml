<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".fragment.NotificationsFragment">

    <!-- Topbar đơn giản -->
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="Inbox"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/teal_200"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Segmented: Notification | Message -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/mbtg_tabs"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="2dp"
        android:layout_marginTop="12dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/btn_notifications"
        app:layout_constraintTop_toBottomOf="@id/toolbar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- KHÔNG set android:background để tránh crash ShapeAppearance -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_notifications"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="20dp"
            android:text="Notification"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2EC4B6"
        app:cornerRadius="20dp"
        app:strokeWidth="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_messages"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:paddingHorizontal="20dp"
            android:text="Message"
            android:textStyle="bold"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
        app:cornerRadius="20dp"
        app:strokeWidth="0dp"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Danh sách (dùng chung cho cả 2 tab) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/mbtg_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_notification" />

    <!-- Empty view -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data."
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mbtg_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/mbtg_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
