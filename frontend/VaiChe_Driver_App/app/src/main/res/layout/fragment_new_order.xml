<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="24dp"
    tools:context=".fragment.NewOrderDialogFragment">

    <!-- KHỐI 1: NÚT X (ĐÓNG) - NẰM RIÊNG BIỆT -->
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintBottom_toTopOf="@id/info_card"
        app:layout_constraintEnd_toEndOf="@id/info_card"
        app:layout_constraintTop_toTopOf="@id/info_card"
        tools:background="@drawable/ic_close_circle" />

    <!-- KHỐI 2: CARD THÔNG TIN CHÍNH -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Nội dung bên trong card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <!-- Price -->
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.520đ"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Rating -->
                <LinearLayout
                    android:id="@+id/rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rating_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_price">

                    <!-- Icon người dùng màu xám -->
                    <ImageView
                        android:id="@+id/iv_person"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_person_circle"
                        app:tint="#9E9E9E"
                        tools:ignore="ContentDescription" />

                    <!-- Icon ngôi sao màu xanh dương -->
                    <ImageView
                        android:id="@+id/iv_star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_star"
                        app:tint="#4285F4"
                        tools:ignore="ContentDescription" />

                    <!-- Text điểm số -->
                    <TextView
                        android:id="@+id/tv_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="5.0"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="16dp"
                    android:progress="100"
                    android:layout_marginEnd="50dp"
                    android:progressDrawable="@drawable/progress_bar_custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

                <!-- Timeline & Addresses -->

                <ImageView
                    android:id="@+id/iv_timeline_image"
                    android:layout_width="20dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_timeline_steps"
                    app:layout_constraintBottom_toBottomOf="@id/tv_end_location_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_start_location_name"
                    app:layout_constraintVertical_bias="0.969" />

                <TextView
                    android:id="@+id/tv_start_location_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Nguyễn Văn Cừ"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_timeline_image"
                    app:layout_constraintTop_toBottomOf="@id/progress_bar" />

                <!-- Các TextView địa chỉ còn lại -->
                <TextView
                    android:id="@+id/tv_start_location_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quận 5, Hồ Chí Minh"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="@id/tv_start_location_name"
                    app:layout_constraintStart_toStartOf="@id/tv_start_location_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_location_name" />

                <TextView
                    android:id="@+id/tv_end_location_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="VAI CHE"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_timeline_image"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_location_address" />

                <TextView
                    android:id="@+id/tv_end_location_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hồ Chí Minh"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="@id/tv_end_location_name"
                    app:layout_constraintStart_toStartOf="@id/tv_end_location_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_end_location_name" />

                <!-- Divider và Order Details -->
                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#F0F0F0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_end_location_address" />

                <TextView
                    android:id="@+id/tv_order_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Collect ~12kg recyclable"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- KHỐI 3: NÚT ACCEPT - NẰM RIÊNG BIỆT -->
    <Button
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#48C5B8"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="@id/info_card"
        app:layout_constraintStart_toStartOf="@id/info_card"
        app:layout_constraintTop_toBottomOf="@id/info_card" />

</androidx.constraintlayout.widget.ConstraintLayout>