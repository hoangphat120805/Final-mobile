<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    tools:context=".fragment.SetPlanDialogFragment">

    <!-- Nút Confirm được ghim ở dưới cùng -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:backgroundTint="#48C5B8"
        android:paddingVertical="16dp"
        android:text="Confirm Pickup Plan"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp" />

    <!-- Nội dung chính nằm phía trên nút Confirm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_confirm"
        android:orientation="vertical">

        <!-- PHẦN GIAO DIỆN BẠN YÊU CẦU GIỮ LẠI -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_plan_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plan Your Recycling Pickup"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_truck_icon"/>

            <TextView
                android:id="@+id/tv_plan_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tell us where you're going to collect recyclables."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plan_title"
                app:layout_constraintEnd_toStartOf="@+id/iv_truck_icon"/>

            <ImageView
                android:id="@+id/iv_truck_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_truck"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_plan_title"
                android:contentDescription="Truck Icon"/>


            <EditText
                android:id="@+id/et_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/ic_location_pin_sized"
                android:textSize="15dp"

                android:drawablePadding="12dp"
                android:hint="Where will you collect recyclables?"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plan_subtitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ĐƯỜNG KẺ NGANG -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"/>

        <!-- RecyclerView để hiển thị kết quả tìm kiếm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/list_item_search_result" />

    </LinearLayout>

</RelativeLayout>