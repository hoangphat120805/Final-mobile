<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.OrderDetailFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_sized"
        app:title="Order Detail"
        app:titleCentered="true" />

    <!-- Nút hành động ở dưới cùng (nội dung và visibility sẽ được thay đổi từ code) -->
    <Button
        android:id="@+id/btn_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#48C5B8"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:visibility="gone"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Action Button"
        tools:visibility="visible" />

    <!-- Nội dung có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">

            <!-- User Info -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    tools:src="@tools:sample/avatars[4]" />

                <!-- Nút Message (đi đến màn hình chat) -->
                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/teal_primary"
                    app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_user_phone"
                    app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
                    app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
                    app:layout_constraintEnd_toStartOf="@id/iv_message"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="User" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user_avatar"
                    app:layout_constraintStart_toStartOf="@id/tv_user_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    app:layout_constraintEnd_toStartOf="@id/iv_message"
                    tools:text="070089***" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/status_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    tools:background="@drawable/green_dot_background" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="On the way to pickup"
                    tools:textColor="#36B37E" />
            </LinearLayout>

            <!-- Delivery Information -->
            <TextView
                style="@style/SectionTitle"
                android:text="Delivery Information" />

            <TextView
                android:id="@+id/tv_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="9:45, 08/07/2025" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iv_timeline_image_detail"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:src="@drawable/img_timeline_steps"
                    app:layout_constraintBottom_toBottomOf="@id/tv_end_location_address_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_start_location_name_detail" />

                <TextView
                    android:id="@+id/tv_start_location_name_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_timeline_image_detail"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Nguyễn Văn Cừ" />

                <TextView
                    android:id="@+id/tv_start_location_address_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="@id/tv_start_location_name_detail"
                    app:layout_constraintStart_toStartOf="@id/tv_start_location_name_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_location_name_detail"
                    tools:text="Quận 5, Hồ Chí Minh" />

                <TextView
                    android:id="@+id/tv_end_location_name_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_timeline_image_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_start_location_address_detail"
                    tools:text="VAI CHE" />

                <TextView
                    android:id="@+id/tv_end_location_address_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="@id/tv_end_location_name_detail"
                    app:layout_constraintStart_toStartOf="@id/tv_end_location_name_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_end_location_name_detail"
                    tools:text="Hồ Chí Minh" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Detail ROW: tiêu đề + 3 icon cùng hàng -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detail_header_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_detail_title"
                    style="@style/SectionTitle"
                    android:text="Detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/ib_edit_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/teal_primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_detail_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_detail_title" />

                <ImageButton
                    android:id="@+id/ib_delete_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/teal_primary"
                    app:layout_constraintEnd_toStartOf="@id/ib_edit_item"
                    app:layout_constraintTop_toTopOf="@id/tv_detail_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_detail_title" />

                <ImageButton
                    android:id="@+id/ib_add_item"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="@color/teal_primary"
                    app:layout_constraintEnd_toStartOf="@id/ib_delete_item"
                    app:layout_constraintTop_toTopOf="@id/tv_detail_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_detail_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Container cho các item chi tiết -->
            <LinearLayout
                android:id="@+id/container_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Total -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#36B37E"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="34.750đ" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Total Weight -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Weight"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_total_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#36B37E"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="~7kg" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Pick-Up Photo Section -->
            <LinearLayout
                android:id="@+id/pickup_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/SectionTitle"
                    android:layout_marginTop="0dp"
                    android:text="Pick-Up" />

                <include
                    android:id="@+id/pickup_photo_view"
                    layout="@layout/include_photo_section" />
            </LinearLayout>

            <!-- Drop-Off Photo Section -->
            <LinearLayout
                android:id="@+id/dropoff_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/SectionTitle"
                    android:layout_marginTop="0dp"
                    android:text="Drop-Off" />

                <include
                    android:id="@+id/dropoff_photo_view"
                    layout="@layout/include_photo_section" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
