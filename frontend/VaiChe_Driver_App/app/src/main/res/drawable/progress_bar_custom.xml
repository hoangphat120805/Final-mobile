<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp Nền (Background) của Progress Bar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <!-- Màu xám nhạt cho phần nền chưa chạy tới -->
            <solid android:color="#E0E0E0" />

            <!-- Bo góc cho nền -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Lớp Tiến trình (Progress) của Progress Bar -->
    <item android:id="@android:id/progress">
        <!-- Sử dụng <clip> để thanh progress có thể "lớn lên" từ trái sang phải -->
        <clip>
            <shape android:shape="rectangle">
                <!-- Màu xanh ngọc cho phần tiến trình đã chạy -->
                <solid android:color="#48C5B8" />

                <!-- Bo góc cho tiến trình, khớp với nền -->
                <corners android:radius="5dp" />
            </shape>
        </clip>
    </item>

</layer-list>